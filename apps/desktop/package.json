{
  "name": "workua-parser-desktop",
  "version": "1.0.0",
  "description": "Desktop version of Work.ua Parser",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "start:linux": "ELECTRON_OZONE_PLATFORM_HINT=x11 electron . --no-sandbox",
    "dev": "electron . --no-sandbox",
    "build:linux": "electron-packager . WorkUA-Parser --platform=linux --arch=x64 --out=dist --overwrite",
    "build:win": "electron-packager . WorkUA-Parser --platform=win32 --arch=x64 --out=dist --overwrite",
    "build": "npm run build:win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@workua/api": "file:../../packages/api",
    "@workua/core": "file:../../packages/core",
    "@workua/store": "file:../../packages/store",
    "@workua/utils": "file:../../packages/utils",
    "axios": "^1.13.3",
    "domhandler": "^5.0.3",
    "domutils": "^3.2.2",
    "htmlparser2": "^10.1.0",
    "module-alias": "^2.3.4"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-packager": "^17.1.2"
  }
}
